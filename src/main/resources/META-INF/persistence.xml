<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="myPersistenceUnit">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>org.tun.models.Post</class>
    <properties>
      <!-- PostgreSQL Connection Properties -->
      <property name="jakarta.persistence.jdbc.driver" value="com.p6spy.engine.spy.P6SpyDriver"/>
      <property name="jakarta.persistence.jdbc.url"
                value="jdbc:p6spy:postgresql://localhost:5432/my_db"/>
      <property name="jakarta.persistence.jdbc.user" value="admin"/>
      <property name="jakarta.persistence.jdbc.password" value="p123"/>

      <!-- Hibernate Properties -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="validate"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="false"/>
    </properties>
  </persistence-unit>
</persistence>